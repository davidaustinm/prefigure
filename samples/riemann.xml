<diagram width="300" height="240" margins="5">
  <definition>f(x) = log(x+1)</definition>
  <coordinates bbox="[-0.2,-0.2,4,2]">

    <grid-axes id="grid-axes" xlabel="x" ylabel="y"/>
    <riemann-sum id = "riemann-sum" function="f" domain="(1,3)" rule="right"
		 N="4" fill="lawngreen" stroke="black" width="1"/>
    <graph id="graph" function="f"/>

    <label id="a1" p="(1.25, 0.5*f(1))" clear-background="yes" background-margin="3">
      <m>A_1</m>
    </label>
    <label id="a2" p="(1.75, 0.5*f(1.5))" 
	   clear-background="yes" background-margin="3">
      <m>A_2</m>
    </label>
    <label id="a3" p="(2.25, 0.5*f(2))"
	   clear-background="yes" background-margin="3">
      <m>A_3</m>
    </label>
    <label id="a4" p="(2.75, 0.5*f(2.5))"
	   clear-background="yes" background-margin="3">
      <m>A_4</m>
    </label>
  </coordinates>

  <annotations>
    <annotation id="figure"
		text="The graph of a function and the right Riemann sum with four terms from 1 to 3">
      <annotation id="grid-axes"
		  text="The coordinate grid and axes">
	<annotation id="grid"
		    text="The coordinate grid" />
	<annotation id="axes"
		    text="The coordinate axes" />
      </annotation>
      <annotation id="graph"
		  text="The graph of the function log x plus 1"/>
      <annotation id="riemann-sum"
		  text="The right Riemann sum with four terms">
	<annotation id="riemann-sum-0"
		    text="The first term in the Riemann sum is the area of this rectangle" />
	<annotation id="riemann-sum-1"
		    text="The second term in the Riemann sum is the area of this rectangle" />
	<annotation id="riemann-sum-2"
		    text="The third term in the Riemann sum is the area of this rectangle" />
	<annotation id="riemann-sum-3"
		    text="The fourth term in the Riemann sum is the area of this rectangle" />
      </annotation>
    </annotation>

  </annotations>

</diagram>
